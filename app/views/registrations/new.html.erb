<div style='margin: 0 20rem'>
  <h1 class='mb-4'>Sign up</h1>
  <!-- This form will point to the 'post sign-up route' when submit the form -->
  <!-- keyword      model      path/prefix route                -->
  <%= form_with model: @user, url: sign_up_path do |form| %>
    <% if form.object.errors.any? %>
      <div class="alert alert-danger">
        <% form.object.errors.full_messages.each do |message| %>
          <div>â€¢ <%= message %></div>
        <% end %>
      </div>
    <% end%>

    <div class="input-group mb-4">
      <%= form.label :email, class: 'd-block w-100' %>
      <div class="input-group-prepend">
        <span class="input-group-text" id="basic-addon1"><i class="fas fa-user"></i></span>
      </div>
      <%= form.email_field :email, class: 'input form-control', placeholder: 'example@gmail.com' %>
    </div>

    <div class="input-group mb-4">
      <%= form.label :password, class: 'd-block w-100'  %>
      <div class="input-group-prepend">
        <span class="input-group-text" id="basic-addon1"><i class="fas fa-lock"></i></span>
      </div>
      <%= form.password_field :password, class: 'input form-control password_toggle',placeholder: '$trongPassw0rd'  %>
      <div class="input-group-append">
        <span class="input-group-text" onclick="password_show_hide();">
          <i class="fas fa-eye" id="show_eye"></i>
          <i class="fas fa-eye-slash d-none" id="hide_eye"></i>
        </span>
      </div>
    </div>

    <div class="input-group mb-4">
      <%= form.label :password_confirmation, class: 'd-block w-100'  %>
      <div class="input-group-prepend">
        <span class="input-group-text" id="basic-addon1"><i class="fas fa-lock"></i></span>
      </div>
      <%= form.password_field :password_confirmation, class: 'input form-control password_confirmation_toggle', placeholder: '$trongPassw0rd' %>
      <div class="input-group-append">
        <span class="input-group-text" onclick="password_confirmation_show_hide();">
          <i class="fas fa-eye" id="show_eye_confirmation"></i>
          <i class="fas fa-eye-slash d-none" id="hide_eye_confirmation"></i>
        </span>
      </div>
    </div>

    <%= form.submit 'Sign Up', class: 'btn btn-primary' %>
  <% end %>
</div>
